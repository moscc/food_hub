%link{:href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}/
%link{:href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}/

= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
= javascript_pack_tag 'application'
#nav.topnav
  %ul
    #logo
      = image_tag 'foodhub1.png'
    %li
      %a
        %input{:placeholder => "Search..", :type => "text"}/
        %button{:type => "submit"}
          %i.fa.fa-search

        = link_to 'Home', root_path
        = link_to 'Chat', new_user_session_path
        = link_to 'Quiz', user_facebook_omniauth_authorize_path
        = link_to 'About', user_facebook_omniauth_authorize_path


      %a.icon{:href => "javascript:void(0);", :onclick => "myFunction()"}
        %i.fa.fa-bars

        
.wrapper
  .navbar.flex.items-center.mx-auto.p-6
    = link_to "Home", root_path
    |
    - if user_signed_in?
      = link_to "My Collection", collections_path
      |
      =link_to "My Profile", user_path(current_user)
      |
      = "Logged in as: #{current_user.email}"
      |
      = link_to 'Sign Out', destroy_user_session_path, method: :delete
    - else
      = link_to 'Sign Up', new_user_registration_path
      |
      = link_to 'Login', new_user_session_path
      |
      = link_to 'Login with Facebook', user_facebook_omniauth_authorize_path

    = form_with url: search_recipes_path, method: :post, local: true do |form|
      = form.text_field :search, placeholder: 'Search'
      = form.submit 'Search'
